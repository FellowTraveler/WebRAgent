# LLM Provider Configuration

# API Keys for LLM Providers (only needed for the selected provider), choose min one.
#OPENAI_API_KEY=your_openai_api_key_here
#CLAUDE_API_KEY=your_claude_api_key_here

# Ollama Configuration
#OLLAMA_HOST=http://localhost:11434
# Or if you run Ollama in a docker container
#OLLAMA_HOST=http://host.docker.internal:11434

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# SearXNG Configuration
SEARXNG_URL=http://searxng:8080
SEARXNG_RESULTS_PER_PAGE=10

# Deep Web Search Configuration
DEEP_SEARCH_MAX_URLS=5
DEEP_SEARCH_PARALLEL=True
DEEP_SEARCH_MAX_WORKERS=3

# Web Scraper Configuration
SCRAPER_USER_AGENT_MODE=rotate  # Can be 'fixed' or 'rotate'
SCRAPER_USER_AGENT=RAGSystem/1.0 (+ragfromscratch)
SCRAPER_RATE_LIMIT=1.0  # Seconds between requests
SCRAPER_TIMEOUT=10  # Seconds
SCRAPER_MAX_CONTENT_LENGTH=100000  # Characters

# Deep Web Search Configuration
DEEP_SEARCH_MAX_URLS=5
DEEP_SEARCH_PARALLEL=True
DEEP_SEARCH_MAX_WORKERS=3

# Flask Secret Key (generate a secure random key for production)
FLASK_SECRET_KEY=change_me_in_production

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DB=ragapp
MONGODB_COLLECTION_CHATS=chat_history
MONGODB_COLLECTION_MESSAGES=chat_messages

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production

# Login Page Configuration
# Set to true to use random background images from static/images/backgrounds/ directory
# Set to false for default gradient background
LOGIN_USE_BACKGROUND_IMAGES=true